<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mini_search_category_spinner"
        style="?android:listSeparatorTextViewStyle"/>

    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mini_search_category_spinner"
        android:background="@color/colorSearchBackground"/>

    <android.support.v7.widget.SearchView
        android:id="@+id/mini_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="@string/mini_search_view_label"
        android:background="@drawable/background_search"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_weight="0.2"/>

</LinearLayout>